package th.domi.learn;

public class Tile {

    public static void main(String[] args){
        Tile tile1 = testTile();
    }

    private char letter;
    private int value;
    public Tile(char letter, int value){
        this.letter=letter;
        this.value=value;
    }

    public static void printTile(Tile tile){
        System.out.println("The tile is the letter " + tile.letter + ", and has the value " + tile.value);
    }

    public static Tile testTile() {
        Tile tile = new Tile('z', 10);
        printTile(tile);
        return tile;
    }

    public boolean equals(Tile that) {
        return this.letter == that.letter
            &&this.value ==that.value;
    }

    public String toString() {
        return "A tile with this letter" + this.letter + "and this value" + this.value;
    }

    public char getLetter(){
        return this.letter;
    }

    public void setLetter(char x){
        this.letter = x;
    }

    public int getValue(){
        return this.value;
    }

    public void setValue(int x){
        this.value = x;
    }
}


