

public class Rational {

    private int numerator;
    private int denominator;
    public Rational(){
        this.numerator = 0;
        this.denominator = 1;
    }

    public static void printRational (Rational number){
        System.out.println("The rational number is: " + number.numerator + "/" + number.denominator);
    }

    public static void main(String[] args){
        Rational number = new Rational(3,4);
        printRational(number);
        System.out.println(number.toString());
        Rational number1 = new Rational(2, 4); // we create a new Rational object to test
        number1.negate();
            System.out.println(number1); //after testing the negate method, we print the result to check it
        number1.negate(); //we reset number1 to positive
        number1.invert();//after testing the invert method, we print the result to check it
            System.out.println(number1);
        System.out.println(number.toDouble()); //we test the toDouble method and print the result
        number1.invert();
        System.out.println((number1));
        Rational number3 = new Rational(3,6);
        System.out.println(number3.reduce());
        Rational number4 = new Rational(2,6);
        Rational number5 = new Rational (1,3);
        System.out.println(number5.add(number4));
    }

    public Rational(int numerator, int denominator){
        this.numerator = numerator;
        this.denominator = denominator;
    }

    public String toString(){
        return String.format("%01d/%01d", this.numerator, this.denominator);
    }

    public void negate(){

        this.numerator = -1 * this.numerator;
    }

    public void invert(){
        int x = this.numerator;
        int y = this.denominator;
        this.numerator = y;
        this.denominator = x;
    }

    public double toDouble() {
        return ((double) this.numerator) / ((double) this.denominator);
    }

    public Rational reduce(){
        int gcd = gcd(this.numerator, this.denominator);
        return new Rational(this.numerator / gcd,	this.denominator / gcd);
    }
    public static int gcd(int num,int den){
        if	(num % den== 0) {
            return den;
        }
        else {
            return gcd(den,num%den);
        }
    }

    public Rational add (Rational that){
        int newNum = (this.numerator * that.denominator) + (that.numerator * this.denominator);
        int newDen = this.denominator * that.denominator;
        Rational result = new Rational(newNum, newDen);
        return result.reduce();
    }
}

